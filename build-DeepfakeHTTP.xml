<project default="main">

	<echo>${ant.version}</echo>

	<target name="main">
		<property name="dollar" value="$" />
		<property name="build.version" value="3.1.1" />
		<property name="tmpAppWar" value="${java.io.tmpdir}/app.war" />
		<property name="tmpMetaInfDir" value="${java.io.tmpdir}/DeepfakeHTTP/META-INF" />
		<property name="tmpManifest" value="${tmpMetaInfDir}/MANIFEST.MF" />
		<property name="releaseJar" value="${basedir}/RELEASE/df-${build.version}.jar" />

		<delete file="${tmpAppWar}" failonerror="false" />
		<war destfile="${tmpAppWar}" webxml="${basedir}/WEB-INF/web.xml" manifest="${basedir}/META-INF/MANIFEST.MF">
			<classes dir="${basedir}/bin" />
			<lib dir="${basedir}/lib" />
		</war>

		<delete dir="${java.io.tmpdir}/DeepfakeHTTP" />
		<unzip src="${basedir}/../tommy/RELEASE/tommy-10.0.10.jar" dest="${java.io.tmpdir}/DeepfakeHTTP" />

		<tstamp>
			<format property="build.timestamp" pattern="yyyy-MM-dd HH:mm:ss" />
		</tstamp>
		<delete dir="${tmpMetaInfDir}" />
		<copy todir="${tmpMetaInfDir}">
			<fileset dir="${basedir}/../tommy/META-INF" />
		</copy>
		<replace file="${tmpManifest}" token="${dollar}{build.version}" value="v${build.version}" />
		<replace file="${tmpManifest}" token="${dollar}{build.timestamp}" value="${build.timestamp}" />

		<delete file="${java.io.tmpdir}/DeepfakeHTTP/org/tommy/main/CustomMain.class" />

		<delete file="${releaseJar}" failonerror="false" />
		<zip destfile="${releaseJar}" level="9">
			<zipfileset prefix="" dir="${java.io.tmpdir}/DeepfakeHTTP" />
			<zipfileset prefix="" dir="${basedir}/bin" />
			<zipfileset prefix="" file="${tmpAppWar}" />
		</zip>
	</target>
</project>
